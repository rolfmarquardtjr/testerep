{
  "buildCommand": "npm run build --filter=@repfy/web",
  "outputDirectory": "apps/web/.next",
  "installCommand": "npm install --legacy-peer-deps",
  "devCommand": "npm run dev",
  "framework": "nextjs",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": {
      "description": "API base URL for backend",
      "example": "https://repfy-backend.onrender.com",
      "required": false
    }
  }
}
